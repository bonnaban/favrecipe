<main>
  <%= form_with model: @user, url: user_session_path do |f| %>
    <div class = "container">
      <div class = "row">
        <div class = "col-sm-11 offset-sm-1">
          <h3><i class="fas fa-sign-in-alt"></i>ログイン</h3>
        </div>
        <div class = "col-sm-10 offset-sm-2">
          <div class = "row mt-3">
            <div class = "col-sm-10">
              <span>会員登録がお済みの方</span>
            </div>
          </div>

          <div class = "row mt-3">
            <div class = "col-sm-3">
              メールアドレス
            </div>
            <div class = "col-sm-9">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com" %>
            </div>
          </div>

          <div class="row mt-3">
            <div class = "col-sm-3">
              パスワード
            </div>
            <div class = "col-sm-9">
              <%= f.password_field :password, autocomplete: "current-password", :placeholder => "0000000000" %>
            </div>
          </div>

          <!--<div class="row mt-3">-->
          <!--  <div class = "offset-sm-3">-->
          <!--    <%# if devise_mapping.rememberable? %>-->
          <!--      <div class="field">-->
          <!--        <%#= f.check_box :remember_me %>-->
          <!--        <%#= f.label "自動ログイン" %>-->
          <!--      </div>-->
          <!--    <%# end %>-->
          <!--  </div>-->
          <!--</div>-->

          <div class = "col-sm-2 offset-sm-3 mt-3 pl-4">
            <%= f.submit "ログイン", class: "btn btn-sm btn-primary" %>
          </div>

          <div class = "col-sm-4 offset-sm-2 mt-3 pl-5">
            <%= link_to 'ゲストログイン（閲覧用）', homes_guest_sign_in_path, method: :post, class: "btn btn-sm btn-warning" %>
          </div>

          <div class = "row mt-3">
            <div class = "col-sm-10">
              <span>まだ会員登録をされていない方</span>
            </div>
          </div>

          <div class = "col-sm-2 offset-sm-3 mt-3">
            <%= link_to "新規会員登録", new_user_registration_path, class: "btn btn-sm btn-success" %>
          </div>

        </div>
      </div>
    </div>
  <% end %>
</main>