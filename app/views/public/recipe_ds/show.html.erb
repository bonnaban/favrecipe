<main>
  <div class = "container">
    <div class = "row">
      <div class = "col-sm-11 offset-sm-1">
        <h3><i class="fas fa-utensils"></i><%= @recipe_d.title %></h3>
      </div>
      <div class = "col-sm-12">
        <%= image_tag @recipe_d.image.representation(resize_to_limit: [1000, 1000]), class: "mx-auto d-block" %>
      </div>
      <div class = "col-sm-3">
        投稿日
      </div>
      <div class = "col-sm-3">
        <%= @recipe_d.created_at.strftime('%Y/%m/%d') %>
      </div>
      <div class = "col-sm-3">
        調理時間
      </div>
      <div class = "col-sm-3">
        <%= @recipe_d.time %>分
      </div>
      <div class = "col-sm-11 offset-sm-1">
        <h3><i class="fas fa-book-open"></i>料理説明</h3>
      </div>
      <div class = "col-sm-12">
        <%= @recipe_d.explanation %>
      </div>
      <div class = "col-sm-11 offset-sm-1">
        <h3><i class="fas fa-user"></i>材料<%= @recipe_d.people %>人分</h3>
      </div>
      <span class = "col-sm-6">
        ##ここから
      </span>
    </div>
  </div>
</main>