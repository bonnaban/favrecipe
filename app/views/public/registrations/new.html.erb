<main>
  <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class = "container">
      <div class = "row">
        <div class = "col-sm-11 offset-sm-1">
          <h3><i class="fas fa-user-plus"></i>新規会員登録</h3>
        </div>
        <div class = "col-sm-10 offset-sm-2">
          <div class = "row mt-3">
            <div class = "col-sm-10">
              <span>必要事項をご記入の上、新規登録ボタンをクリックして下さい。</span>
            </div>
          </div>

          <div class = "row mt-3">
            <div class = "col-sm-3">
              ニックネーム
            </div>
            <div class = "col-sm-9">
              <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", :placeholder => "タロウ" %>
            </div>
          </div>

          <div class = "row mt-3">
            <div class = "col-sm-3">
              メールアドレス
            </div>
            <div class = "col-sm-9">
              <%= f.email_field :email, autocomplete: "email", :placeholder => "sample@example.com" %>
            </div>
          </div>

          <div class="row mt-3">
            <div class = "col-sm-3">
              パスワード(8文字以上)
            </div>
            <div class = "col-sm-9">
              <%= f.password_field :password, autocomplete: "new-password", :placeholder => "00000000" %>
            </div>
          </div>

          <div class="row mt-3">
            <div class = "col-sm-3">
              パスワード(確認用)
            </div>
            <div class = "col-sm-9">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "00000000" %>
            </div>
          </div>

          <div class = "col-sm-2 offset-sm-3 mt-3">
            <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
          </div>

          <div class = "row mt-3">
            <div class = "col-sm-10">
              <span>既に登録済みの方</span>
            </div>
          </div>

          <div class = "col-sm-2 offset-sm-3 mt-3">
            <%= link_to "ログイン", new_user_session_path, class: "btn btn-sm btn-primary" %>
          </div>

        </div>
      </div>
    </div>
  <% end %>
</main>