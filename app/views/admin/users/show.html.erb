<main>
  <div class = "container">
    <div class = "row">
      <div class = "col-sm-11 offset-sm-1">
        <h3><i class="fas fa-cookie-bite"></i><%= @user.nickname %>さんの会員詳細</h3>
      </div>

      <div class = "col-sm-3 offset-sm-1">
        <%= image_tag @user.get_profile_image(200,200), class: "mx-auto d-block" %>
      </div>

      <div class = "col-sm-8">
        <div class = "row">
          <div class = "col-sm-3">会員ID</div>
          <div class = "col-sm-9"><%= @user.id %></div>

          <div class = "col-sm-3">ニックネーム</div>
          <div class = "col-sm-9"><%= @user.nickname %></div>

          <div class = "col-sm-3">メールアドレス</div>
          <div class = "col-sm-9"><%= @user.email %></div>

          <div class = "col-sm-3">会員ステータス</div>
          <div class = "col-sm-9">
            <% if @user.is_active %>
              <font color = "green">有効</font>
            <% else %>
              <font color = "gray">退会</font>
            <% end %>
          </div>

          <div class = "col-sm-6 mt-3">
            <%= link_to "編集する", edit_admin_user_path(@user), class: 'btn btn-sm btn-success' %>
            <%= link_to "このユーザーの投稿を見る", admin_users_post_path(user_id: @user.id), class: 'btn btn-sm btn-primary ml-5' %>
          </div>
        </div>
      </div>

    </div>
  </div>
</main>