<main>
  <div class = "container">
    <div class = "row">
      <div class = "col-sm-11 offset-sm-1">
        <h3><i class="fas fa-cookie-bite"></i><%= @user.nickname %>さんの会員情報編集</h3>
      </div>
      <%= render 'partial_template/error', error: @user %>
      <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
        <div class = "col-sm-10">
          <%= render 'partial_template/user_edit', user: @user, f: f %>
          <div class = "row mt-2">
            <div class = "col-sm-3">会員ステータス</div>
            <div class = "col-sm-9">
              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "有効", {style: "display: inline-block;"} %>
  
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "退会", {style: "display: inline-block;"} %>
            </div>
          </div>
          <div class = "col-sm-12 text-center mt-3">
            <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</main>